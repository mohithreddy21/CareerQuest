<div id="resumeChatbot" class="chatbot-ui">
    <div class="chatbot-header">
        <h2>Resume Assistant</h2>
        <div class="controls">
            <button id="minimizeBtn"><i class="fas fa-minus"></i></button>
            <button id="maximizeBtn"><i class="fas fa-plus"></i></button>
        </div>
    </div>
    <div id="chatMessages" class="chat-messages">
        <div class="bot-message">Hello! How can I help you tailor your resume for this job?</div>
    </div>
    <div class="chat-input">
        <textarea id="userInput" placeholder="Paste your resume or ask for advice..."></textarea>
        <button id="sendBtn">Send</button>
    </div>
</div>